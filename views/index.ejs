    <script type="text/javascript">
      function startCreatorIntro(){
        var intro = introJs();
          intro.setOptions({
            steps: [
              {
                element: document.getElementById('logo'),
                intro: "Hello all! :) This project's called Intro.js."
              },
              {
                element: document.getElementById('infobar'),
                intro: "Ok, wasn't that fun?",
                position: 'right'
              },
              {
                element: document.getElementById('middle'),
                intro: 'More features, more fun.',
                position: 'left'
              },
              {
                element: document.getElementById('gamecanvas'),
                intro: "Let's try it. It's free and open-source.",
                position: 'bottom'
              },
              {
                element: document.getElementById('selectorTabs'),
                intro: 'Get it, use it.'
              }
            ]
          });

          intro.start();
      }

      function startPlayerIntro(){
        var intro = introJs();
          intro.setOptions({
            steps: [
              {
                element: document.getElementById('logo'),
                intro: "Hello all! :) This project's called Intro.js."
              },
              {
                element: document.getElementById('infobar'),
                intro: "Ok, wasn't that fun?",
                position: 'right'
              },
              {
                element: document.getElementById('middle'),
                intro: 'More features, more fun.',
                position: 'left'
              },
              {
                element: document.getElementById('gamecanvas'),
                intro: "Let's try it. It's free and open-source.",
                position: 'bottom'
              }
            ]
          });

          intro.start();
      }
    </script>


